@model List<Web_ThietBiGiaoDuc.Models.DanhMuc>
@{
    ViewBag.Title = "Admin | Quản Lý Danh Mục";
}

<div class="container">
    <div class="page-inner">
        <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row pt-2 pb-4">
            <div>
                <h3 class="fw-bold mb-3">Quản Lý Danh Mục Sản Phẩm</h3>
            </div>
        </div>
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search..." aria-label="Search...">
                    </div>
                    <div class="input-group">
                        <a class="btn btn-primary btn-round ms-auto" href="/admin/danhmuc/them">
                            <i class="fa fa-plus"></i>
                            Thêm Danh Mục
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="add-row"
                           class="display table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Mã Danh Mục</th>
                                <th>Tên Danh Mục</th>
                                <th>Trạng Thái</th>
                                <th style="width: 10%">Xử Lý</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var dm in Model)
                            {
                                <tr>
                                    <td>@dm.MaDM</td>
                                    <td>@dm.TenDanhMuc</td>
                                    <td>@dm.TrangThai</td>
                                    <td>
                                        <div class="form-button-action">
                                            <a href="/admin/danhmuc/sua?maDM=@dm.MaDM"
                                               data-bs-toggle="tooltip"
                                               title=""
                                               class="btn btn-link btn-primary btn-lg"
                                               data-original-title="Edit Task">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            <!-- Nút xóa kích hoạt Modal -->
                                            <button data-bs-toggle="modal"
                                                    data-bs-target="#remove_modal_@dm.MaDM"
                                                    aria-hidden="true"
                                                    tabindex="-1"
                                                    id="remove_btn_@dm.MaDM"
                                                    title=""
                                                    class="btn btn-link btn-danger"
                                                    data-original-title="Remove">
                                                <i class="fa fa-times"></i>
                                            </button>
                                            <!-- Modal Xác nhận xóa -->
                                            <div class="modal fade" id="remove_modal_@dm.MaDM" tabindex="-1" aria-labelledby="confirmDeleteLabel_@dm.MaDM" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="confirmDeleteLabel_@dm.MaDM">Xác nhận xóa</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            Bạn có chắc chắn muốn xóa mục "@dm.TenDanhMuc" không?
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                                            <!-- Form xóa -->
                                                            <form action="/Admin/DanhMuc/Xoa" method="post">
                                                                <input type="hidden" name="maDM" value="@dm.MaDM" />
                                                                <button type="submit" class="btn btn-danger">Xóa</button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">
                            <li class="page-item disabled">
                                <a class="page-link">Previous</a>
                            </li>
                            <li class="page-item active" aria-current="page"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
@model Web_ThietBiGiaoDuc.Models.LoaiSanPham
@{
    ViewBag.Title = "Admin | Sửa Loại Sản Phẩm";
}
<style>
    input, textarea, select {
        max-width: none !important;
    }
</style>
<div class="container">
    <div class="page-inner">
        <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row pt-2 pb-4">
            <div>
                <h3 class="fw-bold mb-3">Sửa Loại Sản Phẩm</h3>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <div class="card-title">Thông Tin Loại Sản Phẩm</div>
            </div>
            <div class="card-body">
                <form action="/admin/loaisanpham/sua" method="post">
                    <input type="text" class="form-control" id="MaLoai" name="MaLoai" value="@Model.MaLoai" placeholder="Nhập tên danh mục" hidden required>
                    <div class="d-flex justify-content-between">
                        <!-- TenLoai -->
                        <div class="col-md-6 mb-3 px-2">
                            <label for="TenLoai" class="form-label">Tên Loại Sản Phẩm</label>
                            <input type="text" class="form-control" id="TenLoai" value="@Model.TenLoai" name="TenLoai" placeholder="Nhập tên loại sản phẩm" required>
                        </div>
                        <!-- MaDM -->
                        <div class="col-md-4 mb-3 px-2">
                            <label for="MaDM" class="form-label">Danh Mục</label>
                            <select class="form-select" id="MaDM" name="MaDM" required>
                                <option value="" disabled>Chọn danh mục</option>
                                @if (ViewBag.listDM != null)
                                {
                                    foreach (var danhMuc in ViewBag.listDM)
                                    {
                                        // Kiểm tra nếu danh mục hiện tại là danh mục đã chọn (selected)
                                        <option value="@danhMuc.MaDM" @(danhMuc.MaDM == Model.MaDM ? "selected" : "")>
                                            @danhMuc.TenDanhMuc
                                        </option>
                                    }
                                }
                            </select>
                        </div>
                        <!-- TrangThai -->
                        <div class="col-md-2 mb-3 px-2">
                            <label for="TrangThai" class="form-label">Trạng Thái</label>
                            <select class="form-select" id="TrangThai" name="TrangThai" required>
                                <option value="" disabled>Chọn trạng thái</option>
                                <option value="hoatdong" @(Model.TrangThai == "hoatdong" ? "selected" : "")>Hoạt Động</option>
                                <option value="daxoa" @(Model.TrangThai == "daxoa" ? "selected" : "")>Đã Xóa</option>
                            </select>
                        </div>
                    </div>

                    <!-- Back Button & Submit Button -->
                    <div class="d-flex justify-content-center">
                        <a class="btn btn-success mx-2" href="/admin/loaisanpham">Quay Lại</a>
                        <button type="submit" class="btn btn-primary mx-2">Cập Nhật Loại Sản Phẩm</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>